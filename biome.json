{
  "$schema": "https://esm.sh/@biomejs/biome@1.8.3/configuration_schema.json",
  "files": {
    "maxSize": 1572864
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": false,
    "rules": {},
    "ignore": [
      ".vitest",
      "node_modules",
      "dist",
      ".wrangler"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", "dist"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", "dist"]
  }
}
